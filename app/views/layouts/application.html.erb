<!DOCTYPE html>
<html>
  <head>
    <title>RottenMangoes</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value) %>
    <% end %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <!-- <div class="container"> -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/movies">Movies</a></li>
            <li><img class="icon" src="http://www.craveonline.com/images/stories/2011/2012/October/Film/Arrival_of_a_Train_at_La_Ciotat.jpg"></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><a href="/users/<%=session[:user_id]%> "><%= "#{current_user.full_name}" %></a></li>
          <% else %>
            <li><a href=" <%= new_session_path %> " class="btn btn-success">Log In</a></li>
            <li><a href=" <%= new_user_path %> " class="btn btn-success">Sign Up</a></li>
          <% end %>
          </ul>
        </div><!--/.nav-collapse -->
     <!--  </div> -->
    </div>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
