<h1>Admin User Management</h1>

<%= paginate @users, :theme => 'twitter-bootstrap-3'%>

<% @users.each do |user|%>
<ul>
  <% unless user.admin.nil? %>
    <li><strong> Admin </strong></li>
  <% end%>
  <li>User Id:<%= user.id%> </li>
  <li>Name: <%= user.full_name %> </li>
  <li>Email: <%= user.email %></li>
  <li>Created at: <%= user.created_at %></li>
  <li>Last Updated: <%= user.updated_at %></li>
  <li><%= link_to "Edit User", edit_admin_user_path(user.id)%> </li>
  <li><%= link_to "Delete User", admin_user_path(user.id), method: :delete %> </li>
  <li><%= link_to "Impersonate User" , impersonate_admin_user_path(user.id), method: :post %> </li>
</ul>

<% end %>

<p><%= link_to "Create User", new_admin_user_path%></p>
