 <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented this user from being submitted:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @user, url: admin_users_path do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :firstname, "First Name" %><br>
    <%= f.text_field :firstname %>
  </div>
  <div>
    <%= f.label :lastname, "Last Name" %><br>
    <%= f.text_field :lastname %>
  </div>
  <div>
    <%= f.label :admin, "Admin?" %><br>
    <%= f.check_box(:admin) %>
  </div>
  <div>
    <%= f.hidden_field :password, :value => ((0...8).map { (65 + rand(26)).chr }.join) %>
  </div>

  <div><%= f.submit "Submit" %></div>
<% end %>